<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.jogoadivinhacao.HelloController">
    <children>
        <Label text="Adivinhe o número (1 a 10)" />

        <TextField fx:id="txtNumero" promptText="Digite um número" maxWidth="150"/>

        <Button text="Verificar" onAction="#verificar"/>

        <Label fx:id="lblResultado" text=""/>

        <Button text="Tentar Novamente" onAction="#tentarNovamente"/>
    </children>
</VBox>
