<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.simplescadastro.HelloController">
    <children>

        <Label text="Cadastro de Alunos"/>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <TextField fx:id="txtNome" promptText="Nome" prefWidth="150"/>
                <TextField fx:id="txtIdade" promptText="Idade" prefWidth="80"/>
                <ComboBox fx:id="cbCurso" promptText="Curso" prefWidth="150"/>
            </children>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Adicionar" onAction="#adicionar"/>
                <Button text="Excluir" onAction="#excluir"/>
            </children>
        </HBox>

        <TableView fx:id="tabela" prefHeight="250" prefWidth="400">

            <columns>

                <TableColumn fx:id="colNome" text="Nome" prefWidth="150"/>
                <TableColumn fx:id="colIdade" text="Idade" prefWidth="100"/>
                <TableColumn fx:id="colCurso" text="Curso" prefWidth="150"/>

            </columns>

        </TableView>

    </children>
</VBox>
