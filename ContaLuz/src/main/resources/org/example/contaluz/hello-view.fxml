<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="238.0" prefWidth="552.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="org.example.contaluz.HelloController">
    <children>

        <Label text="Cálculo de Conta de Energia" />

        <TextField fx:id="txtNome" maxWidth="200" promptText="Nome do cliente" />

        <TextField fx:id="txtConsumo" maxWidth="200" promptText="Consumo em kWh" />

        <ComboBox fx:id="cbTipo" maxWidth="200" promptText="Tipo de residência" />

        <Button onAction="#calcular" text="Calcular" />

        <Label fx:id="lblResultado" maxWidth="1000" text="" wrapText="true" />

    </children>
</VBox>
