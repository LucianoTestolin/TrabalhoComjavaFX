<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.conversortemperatura.HelloController">

    <TextField fx:id="txtValor" promptText="Digite a temperatura" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Converter para °F" onAction="#converterF"/>
        <Button text="Converter para °C" onAction="#converterC"/>
    </HBox>

    <Label fx:id="lblResultado" text="Resultado: "/>
</VBox>
