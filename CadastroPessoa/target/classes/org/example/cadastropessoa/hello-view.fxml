<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.CheckBox?>
<?import java.lang.String?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.cadastropessoa.HelloController">
    <TextField fx:id="txtNome" promptText="Nome" />

    <TextField fx:id="txtIdade" promptText="Idade" />

    <ComboBox fx:id="cbSexo" promptText="Sexo">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Masculino"/>
                <String fx:value="Feminino"/>
            </FXCollections>
        </items>
    </ComboBox>

    <CheckBox fx:id="chkEsporte" text="Gosta de praticar esportes" />

    <Button text="Analisar" onAction="#analisar" />

    <Label fx:id="lblResultado" text="Informe os dados..." />
</VBox>
