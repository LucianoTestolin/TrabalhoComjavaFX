<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.calculadora.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="txtNum1" promptText="Número 1" />

    <TextField fx:id="txtNum2" promptText="Número 2" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="+" onAction="#soma"/>
        <Button text="-" onAction="#subtrair"/>
        <Button text="×" onAction="#multiplicar"/>
        <Button text="÷" onAction="#dividir"/>
    </HBox>

    <Label fx:id="lblResultado" text="Resultado: "/>
</VBox>
